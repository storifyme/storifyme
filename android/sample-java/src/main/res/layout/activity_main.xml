<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.storify.android_sdk.ui.view.StoriesView
        android:id="@+id/storiesView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:storyBorderColor="@android:color/holo_purple"
        app:storyBorderSize="5dp"
        app:progressBarColor="@color/progressBarColor"
        app:storyTextColor="@android:color/holo_red_dark"
        app:widgetBackgroundColor="@color/yellow" />
</LinearLayout>